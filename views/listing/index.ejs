     .filter:hover{
      opacity: 1;
      cursor: pointer;
     }
     .filter p{
       font-size: 0.8rem;
     }
     .tax-info{
      display: none;
     }

     .tax-toggle{
       border: 1px solid black;
       border-radius: 1rem;
       height: 3.25rem;
       padding: 1rem;
        margin-left: 6rem;
        display: flex;
        align-items: center;
     }
     a{
       text-decoration: none;
       color: inherit;
     }
