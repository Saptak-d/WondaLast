      color: #fe424d  ;
     }
     .tax-toggle {
  border: 1px solid black;
  border-radius: 1rem;
  height: auto;
  padding: 1rem;
  margin: 1rem auto;
  display: flex;
  align-items: center;
  justify-content: center;
  width: fit-content;
  max-width: 100%;
  transition: all 0.3s ease;
}

.tax-toggle label {
  font-size: 1rem; /* default size */
  text-align: center;
}
#switchCheckDefault {
  border: 1px solid black;
}

#switchCheckDefault:checked {
  background-color: #fe424d;
  
}

/* Tablet screens */
@media (max-width: 768px) {
  .tax-toggle label {
    font-size: 0.9rem;
  }
}

/* Mobile screens */
@media (max-width: 480px) {
  .tax-toggle label {
    font-size: 0.8rem;
  }
}


/* Very small screens */
@media (max-width: 360px) {
  .tax-toggle label {
    font-size: 0.7rem;
  }
}

        
   </style>
